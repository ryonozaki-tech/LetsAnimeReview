.contents.row
  .container 
    = form_for @post do |f|
      %h3
        投稿する
      = f.text_field :title, class: "title_field", placeholder: "Anime Title"
      #star.form-group.row
        = f.label :rate, '評価', class:'col-md-3 col-form-label'
        -# = f.hidden_field :rate, value: :rate
        :javascript
          $('#star').raty({
            size     : 36,
            starOff:  '#{asset_digest_path('star-off.png')}',
            starOn : '#{asset_digest_path('star-on.png')}',
            starHalf: '#{asset_digest_path('star-half.png')}',
            scoreName: 'post[rate]',
            half: true,
          });
      = f.collection_check_boxes :genre_ids, Genre.all, :id, :name, class: "genre_check"
      = f.text_field :image, class: "image_field", placeholder: "Image Url"
      = f.text_area :review, class: "review_area", placeholder: "Review Text" , rows: "10"
      = f.submit "SEND", class: "submit_btn"

