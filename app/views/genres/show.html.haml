.wrapper
  = render "posts/menu_box"
  .main
    = render "posts/side_bar"
    .reviewPostBox
      - if user_signed_in?
        .post
          = link_to "Let's Review!!", new_post_path, class: "post__btn"
      - else
        .post
          = link_to "Let's Sign Up!!", new_user_registration_path, class: "post__btn"
      .reviews
        .review_th #{@g_name}アニメのページ
        .review_boxes
          = render 'show'
        = paginate(@posts)